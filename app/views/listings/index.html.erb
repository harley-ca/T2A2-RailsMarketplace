<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Game</th>
      <th>Description</th>
      <th>User</th>
      <th>Average Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.listing_type %></td>
        <td><%= listing.game %></td>
        <td><%= listing.description %></td>
        <td><%= listing.user.username %> [<%= listing.user.karma %>]</td>
        <td><%= listing.reviews.average(:rating)%></td>
        <td><%= link_to 'Show', listing, class: 'btn btn-secondary btn-sm'  %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-secondary btn-sm'  %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path, class: "btn btn-primary btn-lg"  %>
