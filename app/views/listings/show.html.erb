<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Type:</strong>
  <%= @listing.listing_type %>
</p>

<p>
  <strong>Game:</strong>
  <%= @listing.game %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user.username %>
</p>
<% if @listing.user == current_user %>
<%= link_to 'Edit', edit_listing_path(@listing), class: 'btn btn-secondary btn-sm'  %> 
<%= link_to 'Destroy', @listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'  %>
<% end %>
<%= link_to 'Reviews', listing_reviews_path(@listing.id), class: 'btn btn-secondary btn-sm'  %> 
<%= link_to 'New Application', new_listing_application_path(@listing.id), class: 'btn btn-secondary btn-sm'  %> 
<%= link_to 'New Review', new_listing_review_path(@listing.id), class: 'btn btn-secondary btn-sm'  %> 
<%= link_to 'Back', @listing, class: 'btn btn-secondary btn-sm' %>



<h4>Reviews:</h4>
<%@listing.reviews.each do |r| %>
    <p>
      <strong>Title:</strong>
      <%= r.title %>
    </p>
        <p>
      <strong>Description:</strong>
      <%= r.description %>
    </p>
        <p>
      <strong>Rating:</strong>
      <%= r.rating %>
    </p>
        <p>
      <strong>User:</strong>
      <%= r.user.username %>
    </p>
    
<% end%>

<h4>Applications TEMP</h4>
<% @listing.applications.each do |a| %>
  <p>
    <strong>Subject:</strong>
    <%= a.subject %>
  </p>
  <p>
    <strong>Type:</strong>
    <%= a.application_type %>
  </p>
  <p>
    <strong>Message</strong>
    <%= a.message %>
  </p>
  <p>
    <strong>User:</strong>
    <%= a.user.username %>
  </p>
<% end %>