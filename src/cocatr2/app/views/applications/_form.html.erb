
<%= simple_form_for @application, url: polymorphic_path([:listing, @application]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  
  <div class="form-inputs">
    <%= f.input :subject %>
    <%= f.input :message %>
    <%= f.collection_radio_buttons :application_type, [["Application", 'Application'], ["Report", 'Report']], :first, :last %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-lg" %>
  </div>



<% end %>
