
<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, required: true %>
    <%= f.input :listing_type, required: true %>
    <%= f.input :game, required: true %>
    <%= f.input :description, required: true %>
    <%= f.input :status %>
    <label class="btn btn-primary btn-sm">
      Add a picture!
      <span style="display:none;">
        <%= f.input :listing_picture, as: :file, required: true, multiple: false, accept: "image/jpg, image/png, image/jpeg" %>
      </span>
    </label>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
