<p id="notice"><%= notice %></p>

<h1>Reviews for <%= @listing.title %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Rating</th>
      <th>User</th>
      <th>Karma</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listing.reviews.each do |r| %>
      <tr>
        <td><%= r.title %></td>
        <td><%= r.description %></td>
        <td><%= r.rating %></td>
        <td><%= r.user.username %></td>
        <td><%= r.user.karma %></td>
        <% if r.user == current_user %>
        <td><%= link_to 'Edit', edit_listing_review_path(@listing.id, r), class: 'btn btn-secondary btn-sm'  %></td>
        <td><%= link_to 'Destroy', listing_review_path(@listing.id, r), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary btn-sm'  %></td>
        <% end %>
        <%= link_to 'Back', @listing, class: 'btn btn-secondary btn-sm' %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

